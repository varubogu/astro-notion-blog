{
  "name": "astro-notion-blog",
  "type": "module",
  "version": "0.6.3",
  "private": true,
  "scripts": {
    "dev": "astro dev --host",
    "start": "astro dev --host",
    "build": "astro build",
    "build:cached": "bun run cache:fetch && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint src",
    "format": "bun x prettier --write .",
    "cache:fetch": "bun scripts/blog-contents-cache.cjs",
    "cache:purge": "nx reset && rm -f tmp/*",
    "_fetch-notion-blocks": "bun scripts/retrieve-block-children.cjs"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@astrojs/react": "^4.1.2",
    "@astrojs/rss": "^4.0.10",
    "@astrojs/sitemap": "^3.2.1",
    "@eslint/js": "^9.17.0",
    "@iconify-json/mdi": "^1.2.2",
    "@iconify-json/octicon": "^1.2.2",
    "@iconify/icons-logos": "^1.2.36",
    "@notionhq/client": "^2.2.15",
    "@nrwl/nx-cloud": "^19.1.0",
    "@supercharge/promise-pool": "^3.2.0",
    "@types/async-retry": "^1.4.9",
    "@types/bun": "^1.1.14",
    "@types/js-base64": "3.0.0",
    "@types/katex": "^0.16.7",
    "@types/metascraper": "^5.14.3",
    "@types/metascraper-description": "^5.14.5",
    "@types/metascraper-image": "^5.14.5",
    "@types/metascraper-title": "^5.14.5",
    "@types/prismjs": "^1.26.5",
    "@types/react-dom": "^19.0.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "@typescript-eslint/typescript-estree": "^8.18.1",
    "astro": "^5.1.1",
    "astro-eslint-parser": "^1.1.0",
    "astro-icon": "^1.1.4",
    "async-retry": "^1.3.3",
    "axios": "^1.7.9",
    "cli-progress": "^3.12.0",
    "eslint": "^9.17.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.37.2",
    "exif-be-gone": "^1.5.1",
    "globals": "^15.14.0",
    "katex": "^0.16.18",
    "mermaid": "^11.4.1",
    "metascraper": "^5.45.25",
    "metascraper-description": "^5.45.25",
    "metascraper-image": "^5.45.27",
    "metascraper-title": "^5.45.25",
    "nx": "^20.3.0",
    "prismjs": "^1.29.0",
    "sharp": "^0.33.5",
    "ts-node": "^10.9.2",
    "typescript-eslint": "^8.18.1"
  },
  "nx": {
    "targets": {
      "_fetch-notion-blocks": {
        "inputs": [
          "!{projectRoot}/**/*",
          "!{projectRoot}/**/.*",
          "!{projectRoot}/**/.*/**/*",
          {
            "env": "DATABASE_ID"
          }
        ],
        "outputs": [
          "{projectRoot}/tmp"
        ]
      }
    },
    "includedScripts": [
      "_fetch-notion-blocks"
    ]
  }
}
