---
import { Icon } from 'astro-icon'
---

<button className="search-button open-search-modal" type="button">
  <Icon name="octicon:search-24" />
  <span>Search</span>
</button>

<style>
  .search-button {
    display: flex;
    width: 100%;
    background-color: transparent;
    margin-bottom: 0.5rem;
    border: none;
    border-radius: var(--radius);
    padding: 0.4rem 0.4rem;
    color: #777;
    font-size: 0.95rem;
    font-weight: bold;
  }
  .search-button:hover {
    cursor: pointer;
    background-color: #ddd;
  }
  .search-button svg {
    width: 20px;
    height: 20px;
    margin-right: 0.2rem;
  }
  [astro-icon="octicon:search-24"] {
    color: var(--fg);
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    function handleKeydown(event: KeyboardEvent) {
      if (event.key === 'k' && event.metaKey) {
        // Ctrl+K or Cmd+K
        const osm: HTMLButtonElement | null = document.querySelector('.open-search-modal')
        if (osm) {
          osm.click()
        }
      }
    }

    document.addEventListener('keydown', handleKeydown)
  })
</script>
